<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a.android.wheretogo.SettingActivity">


    <Switch
        android:id="@+id/vibration_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="37dp"
        android:checked="true"
        app:layout_constraintLeft_toRightOf="@+id/vibration_view"
        app:layout_constraintTop_toBottomOf="@+id/sound_check"
        tools:checked="true" />

    <TextView
        android:id="@+id/vibration_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="40dp"
        android:text="진동 ON/OFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sound_view" />

    <Switch
        android:id="@+id/sound_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="74dp"
        android:checked="true"
        app:layout_constraintLeft_toRightOf="@+id/sound_view"
        tools:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/push_subject" />

    <TextView
        android:id="@+id/push_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="53dp"
        android:text="푸시 알림"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sound_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="74dp"
        android:text="소리 ON/OFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/push_subject" />
</android.support.constraint.ConstraintLayout>
